# Windows VM Deployment Configuration
# Copy this file to .env in the UI directory and update the values

# Environment mode - options: development, production, vm
REACT_APP_ENVIRONMENT=vm

# API Base URL for your Windows VM
# Replace YOUR_VM_IP with the actual IP address of your VM
REACT_APP_API_URL=http://YOUR_VM_IP:8000

# Examples:
# For internal network: REACT_APP_API_URL=http://192.168.1.100:8000
# For public access: REACT_APP_API_URL=http://203.0.113.42:8000
# For domain: REACT_APP_API_URL=http://your-vm-domain.com:8000

# VM deployment flag
REACT_APP_VM_DEPLOYMENT=true

# Optional: Custom port if different from 8000
# REACT_APP_API_PORT=8000

# Optional: Enable/disable development features
# REACT_APP_DEBUG_MODE=false
